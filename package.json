  "description": "Lightweight validator supporting Language Independent Validation Rules Specification",
  "homepage": "https://github.com/koorchik/js-validator-livr",
  "author": {
    "name": "koorchik",
    "url": "http://blog.koorchik.com"
  },
  "license": "MIT",
  "main": "./lib/LIVR",
  "scripts": {
